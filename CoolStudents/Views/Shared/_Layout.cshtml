<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoolStudents</title>

    <link rel="stylesheet" type="text/css" href="/css/w2ui-1.4.2.css" />
    <script src="~/js/jquery.2.1.0.min.js"></script>
    <script type="text/javascript" src="/js/w2ui-1.5.x.js"></script>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>

    <style>
        h1 {
            margin-top: -15px;
        }

        html, body {
            height: 100%;
        }

        hr {
            margin-top: 0px;
            margin-bottom: 0px;
            border: 0;
            border-top: 1px solid #eee;
        }

        .navbar-default .navbar-nav > li > a {
            padding: 0px 20px 7px 0px;
        }

        .dropdown-submenu {
            position: relative;
        }

            .dropdown-submenu .dropdown-menu {
                top: 0;
                left: 100%;
                margin-top: -1px;
            }

        .container {
            margin-left: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">Студенты</a>
                <a class="navbar-brand" href="/group">Группы</a>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
